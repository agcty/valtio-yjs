{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "resolvePackageJsonImports": true,
    "lib": ["ES2024"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2024"
  }
}
